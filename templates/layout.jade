!!! 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='shortcut icon', href='/favicon.ico')
      link(rel='stylesheet', href='/css/style.css')
      mixin google_analytics(locals.google_analytics)
      mixin mathjax
  body
    header
      block header
        mixin header(locals)
    div.container
      block content
    footer
      div.container
        block footer
          p.copyright &copy;#{ new Date().getFullYear() } #{ locals.owner }